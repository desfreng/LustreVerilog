node xor1(x, y: r<1>) returns (out: r<1>)
  let
    out = (x or y) and not (x and y);
  tel

node xor(x, y: r<N>) returns (out: r<N>)
  size N;
  where
    N >= 1;
  when N <= 1:
    let
      out = xor1(x, y);
    tel
  otherwise
    let
      out = xor(x[N/2:N], y[N/2:N]) ++ xor(x[0:N/2], y[0:N/2]);
    tel
